#include "linked-list.h"

ll_node *_new_ll_node()
{
    return (ll_node *) malloc(sizeof(ll_node));
}

linked_list *new_linked_list()
{
    linked_list l=NULL;
    return &l;
}

linked_list *array_to_list

void delete_list(linked_list *l)
{
    ll_node *a, *b;

    a=*l;
    b=a->next;
    
    while( (a!=NULL) && (b!=NULL) ){
        free(a);
        a=b->next;

        free(b);
        b=a->next;
    }

    if(a==NULL){
        free(b);
    }else{
        free(a);
    }
    
}
